<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0091EA"
    tools:context="com.example.javaq.MainActivity" >
    
    
     <TextView
             android:id="@+id/app_text_id"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="Java App"
             android:layout_marginTop="150sp"
             android:layout_marginLeft="110sp"
              android:layout_centerHorizontal="true"
             android:textColor="#FFF"
             android:textSize="14sp"
             android:textStyle="bold|italic"
             android:typeface="serif" />
        
     
        <TextView
            android:id="@+id/company_text_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text=" Â© BitWysee.com"
            android:layout_marginTop="400sp"
            android:textStyle="bold|italic"
            android:textColor="#FFF"
            android:textSize="12sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/ques_btn"
            android:layout_width="123dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/buttonshape"
            android:shadowColor="#FFFDF5"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="Technologies"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/comp_ques_btn"
            android:layout_width="184dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ques_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#FFFDF5"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="Sample Programs"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/app_text_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="- a string from BitWysee..!"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/java_img"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_above="@+id/textView1"
            android:layout_alignRight="@+id/textView1"
            android:src="@drawable/java_img" />

</RelativeLayout>
